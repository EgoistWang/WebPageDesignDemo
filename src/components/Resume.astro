                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  San Francisco, CA
                </span>
              </div>
            </div>

            <!-- Professional Summary -->
            <div class="mb-6">
              <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-3 border-l-4 border-primary-500 pl-3">
                Professional Summary
              </h2>
              <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                Experienced Full-Stack Developer with 5+ years of expertise in modern web technologies. 
                Proven track record of delivering scalable applications, leading development teams, and 
                implementing innovative solutions that drive business growth. Passionate about creating 
                user-centric applications and mentoring junior developers.
              </p>
            </div>

            <!-- Technical Skills -->
            <div class="mb-6">
              <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-3 border-l-4 border-primary-500 pl-3">
                Technical Skills
              </h2>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <strong class="text-gray-900 dark:text-white">Frontend:</strong>
                  <p class="text-gray-700 dark:text-gray-300">React, Vue.js, TypeScript, Tailwind CSS, GSAP</p>
                </div>
                <div>
                  <strong class="text-gray-900 dark:text-white">Backend:</strong>
                  <p class="text-gray-700 dark:text-gray-300">Node.js, Express.js, Python, GraphQL, REST APIs</p>
                </div>
                <div>
                  <strong class="text-gray-900 dark:text-white">Database:</strong>
                  <p class="text-gray-700 dark:text-gray-300">PostgreSQL, MongoDB, Redis, MySQL</p>
                </div>
                <div>
                  <strong class="text-gray-900 dark:text-white">DevOps:</strong>
                  <p class="text-gray-700 dark:text-gray-300">AWS, Docker, Kubernetes, CI/CD, Git</p>
                </div>
              </div>
            </div>

            <!-- Education -->
            <div>
              <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-3 border-l-4 border-primary-500 pl-3">
                Education
              </h2>
              <div class="mb-3">
                <div class="flex justify-between items-start mb-1">
                  <h3 class="font-semibold text-gray-900 dark:text-white">
                    Bachelor of Science in Computer Science
                  </h3>
                  <span class="text-sm text-gray-600 dark:text-gray-400">2015 - 2019</span>
                </div>
                <p class="text-gray-700 dark:text-gray-300">University of Technology</p>
                <p class="text-sm text-gray-600 dark:text-gray-400">GPA: 3.8/4.0, Magna Cum Laude</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Resume Statistics & Actions -->
      <div class="space-y-8">
        <!-- Quick Stats -->
        <div class="glass-card rounded-2xl p-6 resume-stats">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6">
            Professional Highlights
          </h3>
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-gray-600 dark:text-gray-400">Years of Experience</span>
              <span class="text-2xl font-bold gradient-text">5+</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-600 dark:text-gray-400">Projects Completed</span>
              <span class="text-2xl font-bold gradient-text">50+</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-600 dark:text-gray-400">Technologies Mastered</span>
              <span class="text-2xl font-bold gradient-text">20+</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-gray-600 dark:text-gray-400">Team Members Mentored</span>
              <span class="text-2xl font-bold gradient-text">15+</span>
            </div>
          </div>
        </div>

        <!-- Certifications -->
        <div class="glass-card rounded-2xl p-6 resume-certs">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6">
            Certifications
          </h3>
          <div class="space-y-4">
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">AWS Certified Developer</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">Amazon Web Services</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-green-500 to-green-600 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">Google Cloud Professional</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">Google Cloud Platform</p>
              </div>
            </div>
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-purple-500 to-purple-600 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">MongoDB Developer</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">MongoDB University</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact CTA -->
        <div class="glass-card rounded-2xl p-6 text-center resume-cta">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">
            Interested in Working Together?
          </h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            Let's discuss how I can contribute to your team and help achieve your goals.
          </p>
          <a href="#contact" class="btn-primary w-full">
            Get In Touch
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Resume Full View Modal -->
<div id="resume-modal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 hidden items-center justify-center p-4">
  <div class="bg-white dark:bg-gray-900 rounded-2xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between">
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Full Resume</h3>
      <button id="close-resume-modal" class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <div class="p-6">
      <div class="bg-white dark:bg-gray-800 p-8 rounded-xl">
        <!-- Full resume content would go here -->
        <div class="text-center">
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Full resume content would be displayed here. In a real implementation, 
            this could be an embedded PDF viewer or expanded resume content.
          </p>
          <button id="download-from-modal" class="btn-primary">
            Download PDF Version
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animation setup
  function initResumeAnimations() {
    // Animate section header
    gsap.fromTo('.resume-title',
      { opacity: 0, y: 50 },
      {
        opacity: 1,
        y: 0,
        duration: 1,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '#resume',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      }
    );

    gsap.fromTo('.resume-subtitle',
      { opacity: 0, y: 30 },
      {
        opacity: 1,
        y: 0,
        duration: 1,
        delay: 0.2,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '#resume',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      }
    );

    // Animate resume preview
    gsap.fromTo('.resume-preview',
      { opacity: 0, x: -50, scale: 0.95 },
      {
        opacity: 1,
        x: 0,
        scale: 1,
        duration: 1.2,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.resume-preview',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      }
    );

    // Animate side cards with stagger
    gsap.fromTo(['.resume-stats', '.resume-certs', '.resume-cta'],
      { opacity: 0, x: 50, y: 30 },
      {
        opacity: 1,
        x: 0,
        y: 0,
        duration: 1,
        stagger: 0.2,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.resume-stats',
          start: 'top 80%',
          toggleActions: 'play none none reverse'
        }
      }
    );
  }

  // Modal functionality
  function initResumeModal() {
    const modal = document.getElementById('resume-modal');
    const viewResumeBtn = document.getElementById('view-resume');
    const closeModalBtn = document.getElementById('close-resume-modal');
    const downloadBtn = document.getElementById('download-resume');
    const downloadFromModalBtn = document.getElementById('download-from-modal');

    function openModal() {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }

    function closeModal() {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = 'auto';
    }

    function downloadResume() {
      // In a real implementation, this would download the actual PDF
      const link = document.createElement('a');
      link.href = '/resume.pdf'; // This would be the actual PDF file
      link.download = 'YourName_Resume.pdf';
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
      
      // Show download notification
      showNotification('Resume downloaded successfully!', 'success');
    }

    function showNotification(message, type) {
      const notification = document.createElement('div');
      notification.className = `fixed top-4 right-4 z-[60] px-6 py-3 rounded-lg text-white font-medium transform transition-all duration-300 ${
        type === 'success' ? 'bg-green-500' : 'bg-red-500'
      }`;
      notification.textContent = message;
      
      document.body.appendChild(notification);
      
      // Animate in
      gsap.fromTo(notification, 
        { opacity: 0, x: 100 },
        { opacity: 1, x: 0, duration: 0.3 }
      );
      
      // Remove after 3 seconds
      setTimeout(() => {
        gsap.to(notification, {
          opacity: 0,
          x: 100,
          duration: 0.3,
          onComplete: () => {
            document.body.removeChild(notification);
          }
        });
      }, 3000);
    }

    // Event listeners
    viewResumeBtn?.addEventListener('click', openModal);
    closeModalBtn?.addEventListener('click', closeModal);
    downloadBtn?.addEventListener('click', downloadResume);
    downloadFromModalBtn?.addEventListener('click', () => {
      downloadResume();
      closeModal();
    });

    // Close modal when clicking outside
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    // Close modal with Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
        closeModal();
      }
    });
  }

  // Initialize everything
  document.addEventListener('DOMContentLoaded', () => {
    initResumeAnimations();
    initResumeModal();
  });
</script>