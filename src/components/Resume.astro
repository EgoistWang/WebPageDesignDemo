<section id="resume" class="section-padding bg-gradient-to-br from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold gradient-text mb-6 resume-title">
        Resume
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto resume-subtitle">
        A comprehensive overview of my professional journey, skills, and achievements in software development.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Resume Preview & Download -->
      <div class="lg:col-span-2">
        <div class="glass-card rounded-2xl p-8 h-full">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white">
              Resume Preview
            </h3>
            <div class="flex space-x-4">
              <button 
                id="download-resume" 
                class="btn-primary flex items-center space-x-2"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-4-4m4 4l4-4m-6 4V3a1 1 0 011-1h4a1 1 0 011 1v11"></path>
                </svg>
                <span>Download PDF</span>
              </button>
              <button 
                id="view-resume" 
                class="btn-secondary flex items-center space-x-2"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                <span>View Full</span>
              </button>
            </div>
          </div>

          <!-- Resume Preview -->
          <div class="bg-white dark:bg-gray-800 rounded-xl p-8 shadow-inner border-2 border-gray-200 dark:border-gray-700 resume-preview">
            <!-- Header -->
            <div class="text-center mb-8 border-b-2 border-gray-200 dark:border-gray-600 pb-6">
              <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
                Your Full Name
              </h1>
              <p class="text-lg text-gray-600 dark:text-gray-400 mb-4">
                Senior Full-Stack Developer & UI/UX Designer
              </p>
              <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-600 dark:text-gray-400">
                <span class="flex items-center">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  your.email@example.com
                </span>
                <span class="flex items-center">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
